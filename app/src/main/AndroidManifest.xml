<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gdg.rssreader">

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FeedActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StoryViewActivity"
            android:parentActivityName=".FeedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name=".StoryTextActivity"
            android:label="@string/title_activity_story_text"
            android:parentActivityName=".FeedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myrssreader.app.MainActivity" />
        </activity>
    </application>

</manifest>
